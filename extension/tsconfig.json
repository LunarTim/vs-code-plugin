{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDirs": [
      "./src",
      "../compiler/src"
    ]
  },
  "include": [
    "src",
    "tests/extension.test.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "../compiler/**/*"
  ]
}