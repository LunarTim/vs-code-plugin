{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Lumina",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#numbers"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [{
                "name": "keyword.control.lumina",
                "match": "\\b(let|function|if|else|for|return)\\b"
            }]
        },
        "strings": {
            "name": "string.quoted.double.lumina",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.lumina",
                    "match": "\\\\."
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.lumina",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.lumina",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.lumina",
            "match": "\\b[0-9]+(\\.([0-9])+)?\\b"
        }
    },
    "scopeName": "source.lumina"
} 